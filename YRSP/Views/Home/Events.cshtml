@Styles.Render("~/Bundles/fullcalendarcss")
@Scripts.Render("~/Bundles/fullcalendar")
@{
    ViewBag.Title = "Events";
}
<!--background image-->
<style>
    .tooltip-inner {
        background-color: white;
        color: black;
        border: 1px solid black;
    }
</style>
<div class="container-fluid" style="height: 200px;
        background-image: url('../../Images/education3.jpg');
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;">
    <div class="content">

    </div>
</div>
<!--calendar element-->
<div class="container">
    <div id='calendar'></div>
</div>
<script src="https://unpkg.com/popper.js"></script>
<script src="https://unpkg.com/tooltip.js@1.3.2/dist/umd/tooltip.min.js"></script>
<script src="~/Static/events.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');

        var calendar = new FullCalendar.Calendar(calendarEl, {
            plugins: ['dayGrid', 'list'],
            header: {
                left: 'prev,next today',
                center: 'title',
                right: 'dayGridMonth,dayGridWeek,dayGridDay,list'
            },
            events: events.events,
            eventRender: function (info) {
                let atitle;
                const now = new Date();
                const eventDate = new Date(info.event.start);
                if (eventDate < now) {
                    atitle = `<img src="${info.event.extendedProps.img}"/>` + `<br><h3>Expired</h3>`
                    console.log('ex')
                } else {
                    atitle = `<div><img src="${info.event.extendedProps.img}"/>` + info.event.extendedProps.description + `<br><a class="btn btn-primary" href="${info.event.extendedProps.link}" target="_blank">Detail</a></div>`;
                    console.log('not ex')
                }
                var tooltip = new Tooltip(info.el, {
                    title: atitle,
                    placement: 'top',
                    trigger: 'click focus',
                    container: 'body',
                    html: true,
                    closeOnClickOutside: true
                });
            }

        });

        calendar.render();
    });

</script>

